            <li>Type:
                <%= pokemons.type %>
            </li>
        </ul>
        <ul>
            <li>
                HP: <%= pokemons.stats.hp %> 
            </li>
            <li>
                Attack: <%= pokemons.stats.attack %>
            </li>
            <li>
                Defense <%= pokemons.stats.defense %>
            </li>
            <li>
                Special Attack: <%= pokemons.stats.spattack %>
            </li>
            <li>
                Special Defense: <%= pokemons.stats.spdefense %>
            </li>
            <li>
                Speed: <%= pokemons.stats.speed %>
            </li>
        </ul>
